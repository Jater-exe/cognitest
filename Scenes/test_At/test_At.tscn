script/source = "extends Control
var sequence: Array[int] = []
var player_index := 0
var showing_sequence := false

const TOTAL_BUTTONS := 9
const SEQUENCE_LENGTH := 5

@onready var buttons := $Buttons.get_children()
@onready var timer := $Timer

# Called when the node enters the scene tree for the first time.
func _ready() -> void:
	sequence.clear()
	for i in SEQUENCE_LENGTH:
		sequence.append(randi() % TOTAL_BUTTONS)
		showing_sequence = true
	player_index = 0
	var i := 0

	timer.timeout.connect(func():
		if i > 0:
			buttons[sequence[i - 1]].modulate = Color.WHITE

		if i < sequence.size():
			var btn_index = sequence[i]
			buttons[btn_index].modulate = Color.YELLOW
			i += 1
		else:
			timer.stop()
			showing_sequence = false
	)

	timer.start(0.8)


# Called every frame. 'delta' is the elapsed time since the previous frame.
func _process(delta: float) -> void:
	pass
"

